/* 全局样式 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
}

.container {
  padding: 20rpx;
}

/* 号码球样式 */
.number-ball {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  font-size: 28rpx;
  font-weight: bold;
  color: #fff;
  margin: 0 8rpx;
}

.number-ball.front {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.number-ball.back {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

/* 卡片样式 */
.card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.card-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
}

/* 号码容器 */
.numbers-container {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  padding: 20rpx 0;
}

.numbers-row {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.number-divider {
  margin: 0 16rpx;
  font-size: 32rpx;
  color: #666;
}

/* 按钮组 */
.button-group {
  display: flex;
  gap: 16rpx;
  margin-top: 20rpx;
}

/* 免责声明 */
.disclaimer {
  background: #fff9e6;
  border-left: 4rpx solid #faad14;
  padding: 24rpx;
  margin: 20rpx 0;
  border-radius: 8rpx;
}

.disclaimer-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #d46b08;
  margin-bottom: 12rpx;
}

.disclaimer-text {
  font-size: 24rpx;
  color: #8c6d1f;
  line-height: 1.6;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 20rpx;
  color: #999;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
}
