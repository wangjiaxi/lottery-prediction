/* pages/index/index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding: 30rpx;
}

.header {
  text-align: center;
  margin: 60rpx 0 40rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.status-card {
  text-align: center;
  margin-bottom: 40rpx;
}

.status-item {
  margin-bottom: 20rpx;
}

.status-label {
  font-size: 28rpx;
  color: #666;
}

.status-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #4CAF50;
}

.update-time {
  font-size: 24rpx;
  color: #999;
}

.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  margin-bottom: 40rpx;
}

.btn {
  padding: 30rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.2);
  transition: all 0.3s ease;
}

.btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 5rpx 15rpx rgba(0,0,0,0.3);
}

.btn-primary {
  background: linear-gradient(135deg, #ff6b6b, #ff8e8e);
  color: white;
}

.btn-secondary {
  background: linear-gradient(135deg, #4ecdc4, #6de0d8);
  color: white;
}

.results-card {
  margin-bottom: 40rpx;
}

.section-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 15rpx;
}

.section-subtitle {
  display: block;
  font-size: 26rpx;
  color: #666;
  text-align: center;
  margin-bottom: 40rpx;
}

.prediction-section {
  margin-bottom: 50rpx;
}

.prediction-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
}

.numbers-section {
  margin-bottom: 30rpx;
}

.section-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  text-align: center;
}

.numbers-container {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  gap: 20rpx;
}

.number-ball {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  box-shadow: 0 5rpx 15rpx rgba(0,0,0,0.2);
  animation: bounceIn 0.6s ease;
}

.front-ball {
  background: linear-gradient(135deg, #ff6b6b, #ff8e8e);
}

.back-ball {
  background: linear-gradient(135deg, #4ecdc4, #6de0d8);
}

.footer {
  text-align: center;
  margin-top: 40rpx;
}

.nav-link {
  color: #ff6b6b;
  font-size: 28rpx;
  text-decoration: none;
}

@keyframes bounceIn {
  0% {
    transform: scale(0.3);
    opacity: 0;
  }
  50% {
    transform: scale(1.05);
  }
  70% {
    transform: scale(0.9);
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}